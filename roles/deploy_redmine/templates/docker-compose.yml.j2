services:
  redmine:
    image: redmine:latest
    ports:
      - "{{ redmine_port }}:3000"
    env_file:
      - /home/the9gramm/redmine.env
    depends_on:
      - mysql

  mysql:
    image: mysql:5.7
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: redmine
      MYSQL_USER: redmine
      MYSQL_PASSWORD: secret