version: '3.3'

services:
  redmine:
    image: redmine:latest
    restart: always
    ports:
      - "{{ redmine_port }}:3000"
    environment:
      REDMINE_DB_MYSQL: {{ redmine_db_mysql }}
      REDMINE_DB_DATABASE: {{ redmine_db_database }}
      REDMINE_DB_USERNAME: {{ redmine_db_username }}
      REDMINE_DB_PASSWORD: {{ redmine_db_password }}
    depends_on:
      - db

  db:
    image: mysql:5.7
    restart: always
    environment:
      MYSQL_DATABASE: {{ redmine_db_database }}
      MYSQL_USER: {{ redmine_db_username }}
      MYSQL_PASSWORD: {{ redmine_db_password }}
      MYSQL_ROOT_PASSWORD: {{ redmine_db_root_password }}
    volumes:
      - db_data:/var/lib/mysql

volumes:
  db_data: